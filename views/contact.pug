    section.hero.is-fullheight
      div.hero-body
        div.container
          div.columns
            .column.is-4.is-offset-1
              h1.title Vous pouvez me contacter...
              p
                label.label Contact :
              |               
              ul.menu-list                
                li
                  a.no-padding-left.icon-text(href='mailto:bloch.william@gmail.com')
                    span.icon.is-small
                      i.fa.fa-envelope-o
                      //- Mail
                    |  bloch.william@gmail.com
